{% extends "master.twig" %}
{% block content %}
  <div class="mdl-layout mdl-js-layout" style="background: url({{ci_site_url(system.background_image)}}) center / cover;">
    <header class="mdl-layout__header mdl-layout__header--transparent">
      <div class="mdl-layout__header-row">
        <!-- Title -->
        <span class="mdl-layout-title">{{page.title|title}} <small>{{page.subtitle}}</small></span>
        <!-- Add spacer, to align navigation to the right -->
        <div class="mdl-layout-spacer"></div>
        <!-- Navigation -->
        {% include 'components/navigation.twig' %}
      </div>
    </header>
    <div class="mdl-layout__drawer">
      <span class="mdl-layout-title">{{system.fullname}}</span>
      {% include 'components/navigation.twig' %}
    </div>
    <div class="demo-ribbon"></div>
    <main class="mdl-layout__content">
    {% include 'components/ribbon_content.twig' %}
    {% for view,params in views %}
      {% include view with params %}
    {% endfor %}
    </main>
  </div>
{% endblock %}